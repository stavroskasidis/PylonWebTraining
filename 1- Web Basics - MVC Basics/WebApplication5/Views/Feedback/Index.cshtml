@model WebApplication5.Models.FeedbackViewModel

<form method="post" action="/Feedback/Submit">
    <div class="form-group">
        <label>First Name:</label>
        <input name="FirstName" value="@Model.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input name="LastName" value="@Model.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Feedback Text:</label>
        <textarea name="FeedbackText" class="form-control">@Model.FeedbackText</textarea>
    </div>

    <button class="btn btn-default" type="submit">Send Feedback</button>
</form>